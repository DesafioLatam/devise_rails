<ul class="nav navbar-nav navbar-right">
  <%if user_signed_in? %>
    <li class="dropdown">

        <a href="#" class="dropdown-toggle profile-image" data-toggle="dropdown">
        <%if current_user.avatar_url(:thumb).to_s.present? %>
          <%= image_tag(current_user.avatar_url(:thumb).to_s, class:"img-circle special-img") %>
        <%else%>
          <img src="http://placehold.it/30x30" class="img-circle special-img"><b class="caret"></b></a>
        <%end%>
        <ul class="dropdown-menu">
          <li>
            <%= link_to user_path(current_user) do %>
              <i class="fas fa-user"></i> Perfil
            <% end %>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to destroy_user_session_path , method: :delete do %>
              <i class="fas fa-sign-out-alt"></i> Cerrar Sessión
            <% end %>
          </li>
        </ul>
    </li>
  <%else%>
    <li>
      <%= link_to new_user_session_path do %>
        <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
      <% end %>
    </li>
    <li>
      <%= link_to new_user_registration_path do %>
        <i class="fas fa-user-plus"></i> Registrarse
      <% end %>
    </li>
  <%end%>
</ul>
